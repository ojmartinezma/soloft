<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.avancebpo.solucionesoftalmicas" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CALL_PHONE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".SplashActivity"
            android:label="@string/title_activity_splash"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".EspecialidadesActivity"
            android:label="@string/title_activity_especialidades"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".PerfilProfActivity"
            android:label="@string/title_activity_perfil_prof"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".SolCitaActivity"
            android:label="@string/title_activity_sol_cita"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".AutoAgActivity"
            android:label="@string/title_activity_auto_ag" >
        </activity>
    </application>

</manifest>
